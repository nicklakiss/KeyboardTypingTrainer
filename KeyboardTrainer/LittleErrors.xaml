<Window x:Class="KeyboardTrainer.LittleErrors"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeyboardTrainer"
        mc:Ignorable="d"
        Title="LittleErrors" Height="450" Width="800" WindowStyle="None" AllowsTransparency="True" MouseDown="Window_MouseDown" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowState="Maximized" Style="{DynamicResource WindowStyle}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
            <Button x:Name="ButtonHide" Content="-" Click="ButtonHide_Click" Style="{DynamicResource WindowButtonStyle}"/>
            <Button x:Name="ButtonClose" Content="x" Click="ButtonClose_Click" Style="{DynamicResource WindowButtonStyle}"/>
        </StackPanel>
        <TextBlock Text="You pased this level with  mistakes" Grid.Row="1" TextAlignment="Center" Style="{DynamicResource TextBlockStyle}"/>
    </Grid>
</Window>
